# editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8

[*.{yaml,yml,toml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,rst}]
trim_trailing_whitespace = false
